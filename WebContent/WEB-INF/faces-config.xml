<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
 <converter>
  <converter-id>CpfConverter</converter-id>
  <converter-class>br.com.bookstore.converter.CpfConverter</converter-class>
 </converter>
 <managed-bean>
  <managed-bean-name>clienteBean</managed-bean-name>
  <managed-bean-class>br.com.bookstore.managedbean.ClienteBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>livroBean</managed-bean-name>
  <managed-bean-class>br.com.bookstore.managedbean.LivroBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <validator>
  <validator-id>emailValidator</validator-id>
  <validator-class>br.com.bookstore.validator.EmailValidator</validator-class>
 </validator>
 <application>
  <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
 </application>
 
 
  <navigation-rule>
  <from-view-id>/pages/cliente/cadastrar.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>cadastrado</from-outcome>
   <to-view-id>/pages/cliente/listar.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/cliente/listar.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>editar</from-outcome>
   <to-view-id>/pages/cliente/editar.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/cliente/editar.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>salvo</from-outcome>
   <to-view-id>/pages/cliente/edicaoSucesso.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/cliente/edicaoSucesso.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>listar</from-outcome>
   <to-view-id>/pages/cliente/listar.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>home</from-outcome>
   <to-view-id>/pages/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 

 <navigation-rule>
  <from-view-id>/pages/livros/cadastrarLivro.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>sucesso</from-outcome>
   <to-view-id>/pages/livros/listarLivros.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/livros/listarLivros.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>editar</from-outcome>
   <to-view-id>/pages/livros/editarLivro.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>descricao</from-outcome>
   <to-view-id>/pages/livros/descricaoLivro.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/livros/editarLivro.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>salvo</from-outcome>
   <to-view-id>/pages/livros/edicaoSucesso.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/livros/edicaoSucesso.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>listar</from-outcome>
   <to-view-id>/pages/livros/listarLivros.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>home</from-outcome>
   <to-view-id>/pages/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/index.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>buscar</from-outcome>
   <to-view-id>/pages/livros/buscarLivros.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/livros/buscarLivros.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>descricao</from-outcome>
   <to-view-id>/pages/livros/descricaoLivro.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
  
</faces-config>
